<%if logged_in?%>
  <h1>Listing chores</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th>Date Due</th>
        <th>Schedule</th>
        <th>Tag</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @chores.each do |chore| %>
        <tr>
          <td><%= chore.title %></td>
          <td><%= chore.body %></td>
          <td><%= chore.date_due %></td>
          <td><%= chore.schedule %></td>
          <td><%= chore.tag %></td>
          <td><%= link_to 'Show', chore %></td>
          <td><%= link_to 'Edit', edit_chore_path(chore) %></td>
          <td><%= link_to 'Destroy', chore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Chore', new_chore_path %>
<% end %>
